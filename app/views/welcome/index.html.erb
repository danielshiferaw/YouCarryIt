<script>
setInterval(function() {
jQuery.ajax({
  url: "welcome_controller/updateSocial",
  type: "GET",
  dataType: "script"
});
}, 15000); // in milliseconds, focus on many tweets and few requests rather than vice versa
</script>

<div id = "rails-data">
<% for i in 0..(@tweet_limit-1) %>
<%= @sentiments[i].to_s.gsub('~', '') %>~
